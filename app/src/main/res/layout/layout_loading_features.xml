<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_colored_2"
    android:padding="10dp"
    android:id="@+id/lyloadfeatures">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/str_tv_registration_intro"
        android:id="@+id/tvLoadingFeatures"
        android:layout_weight="0.03"
        android:textColor="#FFFFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/btnLoad"
        android:layout_alignTop="@+id/btnLoad" />

    <Button
        android:text="@string/str_btn_loading"
        android:id="@+id/btnLoad"
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />
</RelativeLayout>